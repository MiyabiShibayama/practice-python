# 2-3
# 各ブール演算子の真偽表を書きなさい
print('not : not True : False
             not False : True')
print('and : True and True ≡  True
	     Falsa and True ≡  False
             True and False ≡　False
             False and False ≡　False')
print('or : True or True ≡  True
            False or True ≡　True
            True or False ≡  True
            False or False ≡　False')

# 2-4
# 以下の各式を評価せよ
# (5 > 4) and (3 == 5)
print ('False')
# not (5 > 4)
print('False')
#not ((5 > 4) or (3 == 5))
print('True')
# (True and True) and (True == False)
print('False')
# (not False) or (not True)
print('True')

